---
interface Props {
	title?: string;
	className?: string;
	idC?: string;
}
const { title, className = "", idC = "" } = Astro.props as Props;
---

<button class=`btn ${className}` id={idC}> 
  <slot name="before-title">
  {title}
  <slot name="after-title">
</button>


<style>
.btn {
  display: inherit;
  align-items: inherit;
    
  &.btn-login {
    gap: 0.5em;
    padding: 0.5em;
    border-radius: 0.5em;
    border: 2px solid #1179C6;
    color: #1179C6;
    background-color: transparent;
    transition: 0.15s;

    &:hover {
      color: var(--text-color);
      background-color: var(--principal-color);
      cursor: pointer;
    }
  }

  /*adapt to any location by simply placing the class variant â†“ */

  &#theme-toggle {
    border: none;
    background: none;
    color: var(--text-color);

    &:hover {
      cursor: pointer;
    }
  }
</style>
