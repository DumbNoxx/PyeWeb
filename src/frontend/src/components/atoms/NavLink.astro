---
import type { NavLinkProps } from "@/schemas/components";

const {
	title,
	route,
	class: className = "",
	id: idName = "",
} = Astro.props as NavLinkProps;
---

<a href=`/${route}` class=`nav ${className}` id={idName}>{title}</a>

<style> 
.nav {
  text-decoration: none;
  color: var(--text-color)
  transition: 0.1s ease;

  &:hover {
    cursor: pointer;
  }

  /*adapt to any location by simply placing the class variant â†“ */

  &.navForHeadera:hover {
    color: var(--principal-color);
  }
}
</style>
