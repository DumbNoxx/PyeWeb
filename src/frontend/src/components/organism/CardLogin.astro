---
import { Icon } from "astro-icon/components";
import SubTitle from "@/components/atoms/Text.astro";
import Title from "@/components/atoms/Title.astro";
import SeveralButtons from "@/components/molecules/SeveralButtons.astro";
import type { CardLoginProps } from "@/schemas/components";

const { title, subTitle, buttonList } = Astro.props as CardLoginProps;
---

<div class="cardLogin">
    <Icon name="logo-pye" />
    <div>
      <Title title={title} class="title-login" /> 
      <SubTitle text={subTitle} class="subTitle-login" />
      <div class="container-buttons">
        <SeveralButtons buttons={buttonList} /> 
      </div>
    </div>
</div>


<style>
  .cardLogin {
    max-width: 30em;
    margin: 0 auto;
    padding: 2em;
    background: #000000; 
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid #3D3D3D;    
    text-align: center;
    box-shadow: 0px 8px 37px -8px rgba(84,113,245,0.36);
    -webkit-box-shadow: 0px 8px 37px -8px rgba(84,113,245,0.36);
    -moz-box-shadow: 0px 8px 37px -8px rgba(84,113,245,0.36);
    animation: card-entrance 0.8s ease-out;
  }

  @keyframes card-entrance {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

  [data-icon="logo-pye"] { 
    color: #1179C6;
    filter: drop-shadow(3px 5px 2px rgb(0 0 0 / 0.4));
    margin-bottom: 3.5em;
    margin-top: 0;
    width: 43px;
    height: 43px;
  }
</style>

